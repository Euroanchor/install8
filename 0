mkdir -p /opt/splunk/bin && cd /opt/splunk/bin && curl -O http://releases.splunk.com/dl/quake-sustain_builds/8.0.1-20191030-0305/splunk-8.0.1-9933c910e17a-linux-2.6-x86_64.rpm && rpm -i splunk* && ./splunk start --accept-license && ./splunk enable boot-start && sed -i ‘s/GRUB_CMDLINE_LINUX=“[^“]*/& transparent_hugepage=never/’ /etc/default/grub && grub2-mkconfig -o /boot/grub2/grub.cfg 
